{
  "ConnectionStrings": {
    "DefaultConnection": "DataSource=app.db",
    "ApplicationDbContextConnection": "DataSource=ReactOnlineActivity.db"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "IdentityServer": {
    "Key": {
      "Type": "Development"
    },
    "Clients": {
      "ReactOnlineActivity": {
        "Profile": "IdentityServerSPA"
      }
    }
  },
  "AllowedHosts": "*",
  "SimpleEmailSender": {
    "Host": "smtp.mail.ru",
    "Port": 25,
    "EnableSSL": true
  }
}